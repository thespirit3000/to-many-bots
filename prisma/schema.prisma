generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime @default(now())
  username   String?
  firstName  String?
  lastName   String?
  points     Int @default(0)
  telegramId Int @unique
  updatedAt  DateTime @updatedAt
}
